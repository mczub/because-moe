<?xml version="1.0" encoding="utf-8"?>
  <configuration>
    <system.webServer>         
      <staticContent>
         <mimeMap fileExtension=".json" mimeType="application/json" />
      </staticContent>
      <handlers>
        <add name="iisnode" path="app.js" verb="*" modules="iisnode"/>
      </handlers>
      <rewrite>
        <rules>
            <rule name="DynamicContent">
                 <match url="/*" />
                 <action type="Rewrite" url="app.js"/>
            </rule>
       </rules>
      </rewrite>
    </system.webServer>
  </configuration>